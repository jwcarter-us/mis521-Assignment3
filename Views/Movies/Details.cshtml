@model MovieActorsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Poster)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Movie.Poster != null)
            {
                <img width="100" height="150" src="@Url.Action("GetMoviePoster", "Movies", new {Model.Movie.Id})">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Actors in this Movie:</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].Actor.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Actors)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Actors" asp-route-id="@item.Actor.Id">@Html.DisplayFor(modelItem => item.Actor.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    Average Tweet Sentiment:
    @if (Model.AverageTweetSentiment() != 0)
    {
        <span>@string.Format("{0:n2}", Math.Abs(Model.AverageTweetSentiment()) * 100)%</span>
    }

    @if (Model.AverageTweetSentiment() > 0)
    {
        <span>Positive</span>
    }

    else if (Model.AverageTweetSentiment() < 0)
    {
        <span>Negative</span>
    }
    else
    {
        <span>Neutral</span>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Sentiment
            </th>
            <th>
                Tweet
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>
                    @tweet.Sentiment
                </td>
                <td>
                    @tweet.TweetText
                </td>
            </tr>
        }
    </tbody>
</table>